<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ChiTietSPActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBarChiTietSP"
        app:title="Chi tiết sản phẩm"
        android:background="@color/colorGreen"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        />
    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:background="@drawable/custom_simple"
                android:id="@+id/imgHinhChiTietSP"
                android:src="@drawable/trees_logo"
                android:layout_width="160dp"
                android:layout_height="190dp"
                />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:weightSum="10"
            android:layout_weight="1"
            android:padding="7dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Spinner
                android:id="@+id/spinnerChiTietSP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_margin="5dp"
                android:paddingLeft="40dp"
                android:background="@drawable/custom_simple"
                />
            <Button
                android:id="@+id/btnThemVaoGioHang"
                android:layout_weight="7"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:text="Thêm vào Giỏ hàng"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_click_button"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="6"
            android:weightSum="10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:gravity="center"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:id="@+id/tvTenChiTietSP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KIM NGÂN NƠ TỰ TƯỚI"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="@color/colorGreen3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/tvGiaChiTietSP"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorOrgan"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:text="Giá sản phẩm"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="7"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="Thông tin sản phẩm"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_margin="5dp"/>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvMoTaChiTietSP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:text="Chi tiết sản phẩm"
                        android:layout_margin="5dp"
                        android:padding="5dp"/>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>