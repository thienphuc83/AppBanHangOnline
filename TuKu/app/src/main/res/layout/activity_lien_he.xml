<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image4"
    tools:context=".activity.LienHeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarLienHe"
        android:background="@color/colorGreen"
        app:title="Liên hệ"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Liên hệ với chúng tôi"
            android:textColor="@color/colorGreen"
            android:layout_marginTop="70dp"
            android:textStyle="bold"
            android:textSize="30sp"/>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_margin="30dp"
                android:background="@drawable/custom_boder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/man126"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="La Thiên Phúc"
                    android:textSize="15sp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textColor="#000"/>

            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_margin="30dp"
                android:background="@drawable/custom_boder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/mail126"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="phuclt1976226@gmail"
                    android:textSize="15sp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="#000"/>
            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_margin="30dp"
                android:background="@drawable/custom_boder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/phone126"/>
                <TextView
                    android:id="@+id/tvSĐT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0915342134"
                    android:textSize="15sp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="#000"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>